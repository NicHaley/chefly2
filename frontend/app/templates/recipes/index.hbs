<h1>Recipes!</h1>

<ul>
	{{#each model as |recipe|}}
		<li>
			{{#link-to "recipes.recipe" recipe.id}}
				<h4>{{recipe.name}}</h4>
			{{/link-to}}
			<p>Cook Time: {{recipe.cookTime}}</p>
			<p>Yield: {{recipe.yield}}</p>
			{{recipe.ingredientLines}}
		</li>
		<hr>
	{{/each}}
</ul>

<button {{action "getMoreRecipes"}}>Get More</button>